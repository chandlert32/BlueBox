@model IEnumerable<RentAMovie.Models.RentalModels.RentalListItem>

@{
    ViewBag.Title = "Index";
}

<br />

<style type="text/css">
    h1 {
        color: #fff;
        font-weight: bold;
    }

    body {
        background-image: url('../../Content/Assets/blueback.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        position: relative;
    }

    table {
        text-decoration: none;
    }
</style>

<h1>Rental List</h1>

<p class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</p>

<br />
<br />
<br />

<table class="table table-hover table-bordered" style="background-color:#fff">
    <tr style="background-color: lightgrey">
        <th>
            @Html.DisplayNameFor(model => model.RentalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieTitle)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTitle)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RentalId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RentalId })
            </td>
        </tr>
    }

</table>
