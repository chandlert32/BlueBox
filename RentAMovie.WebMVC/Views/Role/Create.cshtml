@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Create";
}

<style type="text/css">
    h1 {
        color: #fff;
    }

    body {
        background-image: url('../../Content/Assets/blueback.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        position: relative;
    }

    table {
        text-decoration: none;
    }
</style>

<br/>

<h1>Create A New Role</h1>
<div class="btn btn-default">
    @Html.ActionLink("Back to List", "Index")
</div>

<br />
<br />
<br />
<style type="text/css">
    #tbrole, .c {
        border: double;
    }
</style>

@using (Html.BeginForm())
{
    <table class="table table-hover table-bordered" style="background-color: #fff">
        <tr>
            <td class="c">Create a new user role:</td>
            <td class="c">
                @Html.EditorFor(m => m.Name)
            </td>

        </tr>
    </table>
    <input type="submit" style="color:black" value="Create" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
